<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.PrimaryFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_view_class_primary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:textSize="18sp"
            android:padding="2dp"
            android:text="Class"/>
        <Spinner
            android:id="@+id/spinner_class_primary"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/txt_view_subjects_primary"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:textSize="18sp"
            android:layout_height="50dp"
            android:text="Subjects"/>
        <Spinner
            android:id="@+id/spinner_subjects_primary"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:layout_height="50dp"/>
        <Button
            android:layout_margin="4dp"
            android:padding="4dp"
            android:id="@+id/btn_list_students_primary"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="List Students"/>

    </LinearLayout>

</ScrollView>